ifeq ($(strip $(PLATFORM)), linux32_gcc)
	STRIP_TOOL = strip
	CPP_TOOL = g++
	CC_TOOL = gcc
	LD_TOOL = ld
	AR_TOOL = ar

	LDFLAGS += -lpthread

	AFLAGS += crus
	
	SFLAGS +=  
	
	CFLAGS += -Wall
	CFLAGS += -O3
	CFLAGS += -fPIC
	CFLAGS += -D_REENTRANT
	CFLAGS += -DLINUX
	CFLAGS += -m32
	CFLAGS += -fvisibility=hidden

endif

ifeq ($(strip $(PLATFORM)), linux64_gcc)
	STRIP_TOOL = strip
	CPP_TOOL = g++ -g
	CC_TOOL = gcc -g
	LD_TOOL = ld
	AR_TOOL = ar
	IIFLAGS += 
	LDFLAGS += -lpthread

	AFLAGS += crusU
	
	SFLAGS +=  
	
	CFLAGS += -Wall
	CFLAGS += -O3
	CFLAGS += -fPIC
	CFLAGS += -D_REENTRANT
	CFLAGS += -DLINUX
	CFLAGS += -DAIA_OS_BIT64
	CFLAGS += -fvisibility=hidden
	CFLAGS += -std=c++11
	
endif

# X86_32
ifeq ($(strip $(PLATFORM)), linux32)
	STRIP_TOOL = strip
